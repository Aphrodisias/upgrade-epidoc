<ab><lb n="1"/>  <gap reason="lost" extent="unknown" unit="character" dim="left"/>  <persName type="aphrodisian" full="yes"><name reg="Βαλεριανός">Βαλεριανὸς</name></persName>  <g type="stop"/>  <w lemma="ὁ">τὰ</w>  <rs type="subject" key="earthquake"><w>κατενεχθέντα</w></rs>  <w lemma="καί">καὶ</w>  <space extent="1" unit="character" dim="horizontal"/>  <gap reason="lost" extent="unknown" unit="character" dim="right"/></ab>
</div>
