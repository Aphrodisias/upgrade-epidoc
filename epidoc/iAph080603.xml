			<lb n="3"/><w lemma="οὐρανός">οὐρανῶν</w>, <w lemma="βοηθέω">βοήθησον</w>
			<lb n="4"/><w lemma="καί">κὲ</w> <w lemma="οἰκονομέω">οἰκονόμεσον</w>
			<lb n="5"/><w lemma="ὁ">τὸν</w> <w lemma="δοῦλος">δοῦλον</w> <w lemma="σύ">σου</w>
