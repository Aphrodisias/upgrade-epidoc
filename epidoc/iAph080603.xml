			<lb n="7"/><w lemma="ὁ">τὼν</w> <w lemma="καί">κὲ</w> <persName key="koureos" type="attested"><name nymRef="#Κουρεως">Κο<unclear reason="damage">υρ</unclear>εων</name></persName>
		</ab>
		
