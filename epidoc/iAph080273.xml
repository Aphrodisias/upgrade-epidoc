		<lb n="5"/><rs type="profession" key="scholasticus"><w lemma="σχολαστικός"><expan><abbr>σχο</abbr><ex>λαστικὸν</ex></expan></w></rs> <w lemma="καί">καὶ</w> <rs type="official-secul" key="consularis"><w lemma="ὑπατικός"><expan><abbr>ὑπα</abbr><ex>τικὸν</ex></expan></w></rs> <w lemma="ὁ">τὸν</w> <w lemma="οἰκεῖος">οἰκῖον</w>
