         <div type="edition" xml:lang="grc" xml:space="preserve">
        
		<ab>
		<lb n="1"/><supplied reason="lost" cert="low"><del status="unremarkable"><g ref="#cross"/></del></supplied> <w lemma="ὁ">ἡ</w> <rs key="clarus" type="dignity"><w lemma="λαμπρός">λαμπρὰ</w></rs> <w lemma="καί">καὶ</w>
