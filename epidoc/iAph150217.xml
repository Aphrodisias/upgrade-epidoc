<ab><lb n="1"/>  <persName type="attested"><name nymRef="#Ἀλέξανδρος">Ἀλέξανδρο<supplied reason="lost">ς</supplied></name></persName><lb n="2"/> <w lemma="ὑπήκοος">ὑπηκόῳ</w> <persName type="divine"><name>Κόρῃ</name></persName>  <w lemma="εὐχή"><supplied reason="lost">εὐ</supplied><lb n="3"/>χ<hi rend="ligature">ην</hi></w>  <w lemma="ἀνατίθημι">ἀνέθηκα</w></ab>
