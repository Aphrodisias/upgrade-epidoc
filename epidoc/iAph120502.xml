<ab><lb n="1"/><w lemma="ὁ">ἡ</w>  <w lemma="βουλή">βουλὴ</w>  <w lemma="καί">καὶ</w>  <w lemma="ὁ">ὁ</w>  <w lemma="δῆμος">δῆμος</w>  <w lemma="θάπτω">ἔθαψεν</w>  <lb n="2"/><persName nymRef="#Ἐπαίνετος  Φιλοδήμου" type="attested"><name nymRef="#Ἐπαίνετος">Ἐπαίνετον</name>  <persName type="attested"><name nymRef="#Φιλόδημος">Φιλοδήμου</name></persName></persName>  <w lemma="γίγνομαι">γε<lb n="3" break="no"/>νόμενον</w>  <w lemma="ἀγαθός">ἀγαθὸν</w>  <w lemma="ἀνήρ">ἄνδρα</w>  <w lemma="καί">καὶ</w><lb n="4"/><w lemma="διαφέρω">διενέγκαντα</w>  <w lemma="εὐταξία">εὐταξίᾳ</w>  <w lemma="καί">καὶ</w><lb n="5"/><w lemma="ἀρετή">ἀρετῇ</w>  <w lemma="ἔτι">ἔτι</w>  <w lemma="παντάπασι">παντάπασι</w>  <space extent="1" unit="character" dim="horizontal"/>  <w lemma="εἰμί">ὄν<lb n="6" break="no"/>τα</w>  <w lemma="νέος">νέον</w>  <w lemma="στεφανόω">ἐστεφάνωσεν</w>  <lb n="7"/><w lemma="δέ">δὲ</w>  <w lemma="καί">καὶ</w>  <w lemma="χρυσός">χρυσῷ</w>  <w lemma="στέφανος">στεφάνῳ</w>  </ab>
