<ab><lb n="1"/> <w lemma="ὁ">ἡ</w> <w lemma="σορός">σορὸς</w> <w lemma="καί">καὶ</w> <w lemma="ὁ">ὁ</w> <w lemma="τόπος">τόπος</w> <w lemma="κατά">καθ'</w> <w lemma="ὅς">οὗ</w> <w lemma="ἐπίκειμαι">ἐπικεῖται</w> <w lemma="εἰμί">ἐστιν</w> <persName type="attested"><name nymRef="#Μᾶρκος">Μάρκου</name> <name nymRef="#Αὐρήλιος">Α<supplied reason="lost">ὐ</supplied>ρηλίο<supplied reason="lost">υ</supplied></name>  <name nymRef="#Ἑρμογένης"><supplied reason="lost">Ἑρ</supplied><lb n="2" break="no"/>μογένους</name> <w lemma="ὁ">τοῦ</w> <persName type="attested"><name nymRef="#Νάρδος">Νάρδο<g ref="#projection"/>υ</name></persName></persName> <w lemma="εἰς">εἰς</w> <w lemma="ὅς">ἣν</w> <w lemma="σορός">σορὸν</w> <w lemma="θάπτω">τέθαπται</w> <w lemma="αὐτός">αὐ<supplied reason="lost" cert="low">τὸς</supplied></w> <gap reason="lost" unit="character" precision="low" quantity="3"/>  <lb n="3"/> <w lemma="αὐτός">αὐτοῦ</w> <w lemma="θάπτω">ταφήσεται</w> <w lemma="δέ">δὲ</w> <g ref="#projection"/> <w lemma="καί">καὶ</w> <persName type="attested"><name nymRef="#Τατιανός">Τατιανὸς</name></persName> <w lemma="ὁ">ὁ</w> <w lemma="προγράφω">προγεγραμμέν<supplied reason="lost" cert="low">ος</supplied></w>    <gap reason="lost" unit="character" quantity="3"/>  <lb n="4"/> <w lemma="ὁ">τὰ</w> <w lemma="τέκνον">τέκνα</w> <w lemma="αὐτός">αὐτοῦ</w> <w lemma="καί">κ<g ref="#projection"/>αὶ</w> <w lemma="ὅς">οὓς</w> <w lemma="ἄν">ἄν</w> <w lemma="ζάω">ζῶν</w> <w lemma="ὁ">ὁ</w> <persName type="attested"><name nymRef="#Τατιανός">Τατιανὸς</name></persName> <w lemma="ἤ">ἢ</w>   <gap reason="lost" unit="character" quantity="3"/>  <lb n="5"/><w lemma="οὐδείς"><supplied reason="lost">οὐ</supplied>δεὶς</w> <w lemma="ἔχω">ἕξει</w> <w lemma="ἐξουσία">ἐξουσ<g ref="#projection"/>ίαν</w> <w lemma="ἐνθάπτω">ἐνθάψαι</w> <w lemma="ἤ">ἢ</w> <w lemma="ἐκθάπτω">ἐκθάψ<supplied reason="lost">αι</supplied></w>  <gap reason="lost" unit="character" extent="unknown"/>  </ab>
