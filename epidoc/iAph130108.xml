<ab><lb n="1"/> <w lemma="ὁ">ἡ</w> <w lemma="σορός">σορός</w> <w lemma="εἰμί">ἐστιν</w> <persName type="attested"><name nymRef="#Αὐρηλία">Αὐρηλίας</name> <lb n="2"/> <name nymRef="#Ζωτική">Ζωτικῆς</name></persName> <w lemma="ὁ"><hi rend="ligature">τῆ</hi>ς</w> <w lemma="καί">κα<unclear reason="damage">ὶ</unclear></w> <lb n="3"/> <persName type="attested"><name nymRef="#Ζωτικός">Ζωτικοῦ</name> <w lemma="ὁ">τοῦ</w> <persName type="attested"><name nymRef="#Πανκράτης">Πα<lb n="4" break="no"/>νκράτου</name> <w lemma="ὁ">τοῦ</w> <w lemma="καί">καὶ</w> <lb n="5"/> <name nymRef="#Δημήτριος">Δ<hi rend="ligature">ημη</hi>τρίου</name></persName></persName> <w lemma="εἰς">εἰς</w> <w lemma="ὅς">ἣ<lb n="6" break="no"/>ν</w> <w lemma="θάπτω">ταφήσεται</w> <w lemma="αὐτός">αὑτὴ</w> <lb n="7"/> <w lemma="καί">καὶ</w> <persName type="attested"><name nymRef="#Αὐρήλιος">Αὐρήλιος</name> <name nymRef="#Ζωτικός">Ζωτι<lb n="8" break="no"/>κὸς</name></persName> <w lemma="ὁ">ὁ</w> <w lemma="πατήρ">πά<hi rend="ligature">τηρ</hi></w> <w lemma="αὐτός">αὐ<hi rend="ligature">τῆ</hi>ς</w> <lb n="9"/> <w lemma="ἕτερος">ἕταιρος</w> <w lemma="δέ">δὲ</w> <w lemma="οὐδείς"><orig reg="οὐδεὶς">οὐδὶς</orig></w> <lb n="10"/> <w lemma="ἕξις">ἕξι</w> <w lemma="ἐξουσία">ἐξουσίαν</w> <w lemma="ἐνθάπτω">ἐ<supplied reason="omitted">ν</supplied>θά<lb n="11" break="no"/>ψε</w> <w lemma="τις">τινὰ</w> <w lemma="ἤ">ἢ</w> <w lemma="ἐκθάπτω">ἐχθάψε<sic n="superfluous">ν</sic></w><lb n="12"/> <w lemma="ἐπί">ἐπὶ</w> <sic n="superfluous"><orig n="unresolved">αεπι</orig></sic> <w lemma="ἀποτίνω">ἀποτίσει</w> <w lemma="ὁ">τῇ</w> <lb n="13"/> <w lemma="θεός">θεῷ</w> <persName type="divine"><name nymRef="#Ἀφροδίτη">Ἀφροδί<hi rend="ligature">τῃ</hi></name></persName> <w lemma="δηνάριον">δηνάρι<lb n="14" break="no"/>α</w> <num value="5000">ε</num> <w lemma="εἰμί">ὧν</w> <w lemma="ὁ">τὸ</w> <w lemma="τρίτος">τρίτον</w> <w lemma="εἰμί">ἔστω</w> <lb n="15"/> <w lemma="ὁ">τοῦ</w> <w lemma="ἐκδικέω">ἐκδικήσαντος</w><lb n="15a"/><ga