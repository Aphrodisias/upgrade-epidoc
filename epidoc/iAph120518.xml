<ab><lb n="1"/> <w lemma="ὁ">ἡ</w> <w lemma="βουλή">βουλὴ</w> <w lemma="καί">καΐ</w> <w lemma="ὁ">ὁ</w> <w lemma="δῆμος">δῆμος</w> <w lemma="τιμάω">ἐτεί<lb n="2" break="no"/>μησαν</w> <w lemma="καί">καὶ</w> <w lemma="μεταλλάσσω">μετηλλαχυῖ<lb n="3" break="no"/>αν</w> <persName type="attested"><name nymRef="#Κλαυδία">Κλαυδίαν</name> <persName type="attested"><name nymRef="#Κλαύδιος">Κλαυδίου</name> <name nymRef="#Ἀπολλώνιος ">Ἀπολ<lb n="4" break="no"/>λωνίου</name></persName></persName> <w lemma="ἀρχιερεύς">ἀρχιερέως</w> <w lemma="θυγάτηρ">θυγατέρα</w> <lb n="5"/> <persName type="attested"><name nymRef="#Τρυφῶσα">Τρυφῶσαν</name> <name nymRef="#Παυλεῖνα">Παυλεῖναν</name></persName> <w lemma="ἀρχιέρεια">ἀρχι<lb n="6" break="no"/>έρειαν</w> <w lemma="διά">διά</w> <w lemma="τε">τε</w> <w lemma="ὁ">τὴν</w> <w lemma="ὁ">τοῦ</w> <w lemma="πατήρ">πατρὸς</w> <lb n="7"/> <w lemma="καί">καὶ</w> <w lemma="ὁ">τῶν</w> <w lemma="πρόγονος">προγόνων</w> <w lemma="αὐτός">αὐτῆς</w> <w lemma="εἰς">εἰς</w> <lb n="8"/> <w lemma="ὁ">τὴν</w> <w lemma="πατρίς">πατρίδα</w> <w lemma="ἐν">ἐν</w> <w lemma="πᾶς">πᾶσι</w> <w lemma="φιλοτιμία">φιλοτει<lb n="9" break="no"/>μείαν</w> <w lemma="καί">καὶ</w> <w lemma="διά">διὰ</w> <w lemma="ὁ">τὴν</w> <w lemma="ἑαυτοῦ">ἑαυτῆς</w> <w lemma="κοσμιότης">κοσ<lb n="10" break="no"/>μιότητα</w> <w lemma="κάλλος">κάλλει</w> <w lemma="διαφέρω">διενενκοῦ<lb n="11" break="no"/>σαν</w> <w lemma="καί">καὶ</w> <w lemma="τελευτάω">τελευτήσασαν</w> <w lemma="παρθένος">παρ<lb n="12" break="no"/>  <space extent="3" unit="character" dim="horizontal"/> θένον</w> <w lemma="ἔτι">ἔτι</w> <g ref="#leaf"/>  </ab>
