<ab><lb n="1"/> <w lemma="ὁ">τὸ</w> <w lemma="ἡρῶος">ἡρῶόν</w> <w lemma="εἰμί">ἐστιν</w> <w lemma="προγονικός">πρ<unclear reason="damage">ο</unclear>γονικὸν</w> <persName type="attested"><name nymRef="#Μᾶρκος">Μάρκων</name> <lb n="2"/> <name nymRef="#Αὐρήλιος"><expan><abbr>Αὐρ</abbr><ex>ηλίων</ex></expan></name> <name nymRef="#Κλαύδιος"><expan><abbr>Κλ</abbr><ex>αυδίων</ex></expan></name> <name nymRef="#Κάστωρ">Κάστορος</name></persName> <w lemma="καί">καὶ</w> <persName type="attested"><name nymRef="#Παπύλος">Παπύλου</name></persName> <w lemma="καί">καὶ</w> <persName type="attested"><name nymRef="#Διονύσιος">Διο<lb n="3" break="no"/>νυσίου</name> <w lemma="ὁ">τῶν</w> <name nymRef="#Παπύλος">Παπύλου</name> <w lemma="ὁ">τοῦ</w> <persName type="attested"><name nymRef="#Διονύσιος">Διονυσίου</name> <lb n="4"/> <w lemma="ὁ">τοῦ</w> <persName type="attested"><name nymRef="#Παπύλος">Παπύλου</name></persName></persName></persName> <w lemma="κληρονόμος">κληρονόμων</w> <w lemma="διάδοχος"><unclear reason="damage">δ</unclear>ιαδόχων</w> <lb n="5"/> <w lemma="τε">τε</w> <w lemma="αὐτός">αὐτῶν</w> <w lemma="καθώς">καθὼς</w> <w lemma="καί">καὶ</w> <w lemma="ὁ">τὰ</w> <w lemma="ἐγχαράσσω">ἐνκεχαραγμένα</w> <w lemma="καί">καὶ</w> <lb n="6"/> <w lemma="διά">διὰ</w> <w lemma="ὁ">τοῦ</w> <w lemma="ψήφισμα">ψηφίσματος</w> <w lemma="δείκνυμι">δείκνυσιν</w> <g ref="#scroll"/> </ab>
